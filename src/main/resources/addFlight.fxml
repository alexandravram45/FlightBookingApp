<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.AddFlightController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="591.0" layoutX="5.0" layoutY="-2.0">
         <image>
            <Image url="@images/addFlight.png" />
         </image>
      </ImageView>
      <Button fx:id="addFight" layoutX="389.0" layoutY="286.0" mnemonicParsing="false" onAction="#addFlightButton" prefHeight="40.0" prefWidth="86.0" text="Add Flight" />
      <Label alignment="CENTER" layoutX="79.0" layoutY="98.0" prefHeight="30.0" prefWidth="47.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10px;" text="From:" />
      <Label alignment="CENTER" layoutX="356.0" layoutY="98.0" prefHeight="30.0" prefWidth="29.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10px;" text="To:" />
      <Label alignment="CENTER" layoutX="79.0" layoutY="170.0" prefHeight="40.0" prefWidth="92.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10px;" text="Departure Date:" />
      <Label alignment="CENTER" layoutX="356.0" layoutY="175.0" prefHeight="30.0" prefWidth="41.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10px;" text="Time:" />
      <TextField fx:id="cityA" layoutX="79.0" layoutY="135.0" prefHeight="25.0" prefWidth="174.0" promptText="departure desstination" />
      <TextField fx:id="cityB" layoutX="356.0" layoutY="135.0" prefHeight="25.0" prefWidth="174.0" promptText="arriving destination" />
      <Label alignment="CENTER" layoutX="79.0" layoutY="263.0" prefHeight="30.0" prefWidth="41.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10px;" text="Price:" />
      <TextField fx:id="price" layoutX="78.0" layoutY="301.0" prefHeight="25.0" prefWidth="174.0" promptText="add a price for the flight" />
      <TextField fx:id="time" layoutX="356.0" layoutY="216.0" prefHeight="25.0" prefWidth="174.0" promptText="add the departure and arriving time" />
      <Text fx:id="addingMessage" layoutX="175.0" layoutY="69.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="226.0">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <Button fx:id="goBack" layoutX="26.0" layoutY="354.0" mnemonicParsing="false" onAction="#goBackButton" text="Back" />
      <TextField fx:id="takeOffDate" layoutX="78.0" layoutY="216.0" prefHeight="25.0" prefWidth="174.0" promptText="add a date for the departure" />
   </children>
</AnchorPane>
